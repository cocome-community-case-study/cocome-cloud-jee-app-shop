{
    "compilerOptions": {
        "module": "AMD",
        "target": "es5",
        "noImplicitAny": true,
        "removeComments": true,
        "experimentalDecorators": true,
        "preserveConstEnums": true,
        "outDir": "www/js/",
        "sourceMap": true,
        "jsx": "react",
        "lib": ["es5", "es2015.promise", "dom"]
    },
    "include": [
        "www/ts/*",
        "www/ts/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}